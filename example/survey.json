{
  "nameId": "video_game_event_survey",
  "title": "Video Game Event Experience Survey",
  "version": "1.0.0",
  "description": "Tell us about your experience at the Galactic Gaming Expo!",

  "questions": {
    "event_rating": {
      "nameId": "event_rating",
      "visible": true,
      "type": "radio",
      "label": "How would you rate the event overall?",
      "required": true,
      "value": {
        "placeholder": "Select an option",
        "options": [
          {
            "nameId": "rating_amazing",
            "label": "Amazing"
          },
          {
            "nameId": "rating_good",
            "label": "Good"
          },
          {
            "nameId": "rating_meh",
            "label": "Meh"
          },
          {
            "nameId": "rating_terrible",
            "label": "Terrible"
          }
        ]
      }
    },

    "favorite_game": {
      "nameId": "favorite_game",
      "visible": true,
      "type": "single_select",
      "label": "What was your favorite game at the event?",
      "required": true,
      "value": {
        "options": [
          {
            "nameId": "game_cyberworld_2078",
            "label": "Cyberworld 2078"
          },
          {
            "nameId": "game_zombie_apocalypse",
            "label": "Zombie Apocalypse"
          },
          {
            "nameId": "game_fortress_siege",
            "label": "Fortress Siege"
          },
          {
            "nameId": "game_rocket_adventure",
            "label": "Rocket Adventure"
          }
        ]
      }
    },

    "improvement_areas": {
      "nameId": "improvement_areas",
      "visible": true,
      "type": "multi_select",
      "label": "What areas could be improved?",
      "required": false,
      "value": {
        "options": [
          {
            "nameId": "improve_food_beverages",
            "label": "Food & Beverages"
          },
          {
            "nameId": "improve_security_safety",
            "label": "Security & Safety"
          },
          {
            "nameId": "improve_game_selection",
            "label": "Game Selection"
          },
          {
            "nameId": "improve_staff_service",
            "label": "Staff & Service"
          },
          {
            "nameId": "improve_venue_facilities",
            "label": "Venue & Facilities"
          }
        ]
      }
    },

    "would_attend_again": {
      "nameId": "would_attend_again",
      "visible": true,
      "type": "radio",
      "label": "Would you attend this event again?",
      "required": true,
      "value": {
        "options": [
          {
            "nameId": "attend_yes",
            "label": "Yes, definitely!"
          },
          {
            "nameId": "attend_maybe",
            "label": "Maybe, depends on improvements"
          },
          {
            "nameId": "attend_no",
            "label": "No, I wouldn't"
          }
        ]
      }
    },

    "negative_feedback": {
      "nameId": "negative_feedback",
      "visible": true,
      "type": "text_area",
      "label": "Please tell us what went wrong and how we can improve",
      "required": false,
      "value": {
        "placeholder": "Share your concerns...",
        "min": 10,
        "max": 2000
      },
      "dependsOn": [
        [
          {
            "questionNameId": "would_attend_again",
            "optionNameId": "attend_no"
          }
        ],
        [
          {
            "questionNameId": "event_rating",
            "optionNameId": "rating_terrible"
          }
        ],
        [
          {
            "questionNameId": "event_rating",
            "optionNameId": "rating_meh"
          },
          {
            "questionNameId": "would_attend_again",
            "optionNameId": "attend_maybe"
          }
        ]
      ]
    },

    "specific_food_beverages_feedback": {
      "nameId": "specific_food_beverages_feedback",
      "visible": true,
      "type": "text_area",
      "label": "What specific issues did you have with the food?",
      "required": false,
      "value": {
        "placeholder": "Tell us about your food experience...",
        "min": 5,
        "max": 1000
      },
      "dependsOn": [
        [
          {
            "questionNameId": "improvement_areas",
            "optionNameId": "improve_food_beverages"
          }
        ]
      ]
    },

    "specific_security_safety_feedback": {
      "nameId": "specific_security_safety_feedback",
      "visible": true,
      "type": "text_area",
      "label": "What security concerns did you experience?",
      "required": false,
      "value": {
        "placeholder": "Describe your security concerns...",
        "min": 5,
        "max": 1000
      },
      "dependsOn": [
        [
          {
            "questionNameId": "improvement_areas",
            "optionNameId": "improve_security_safety"
          }
        ]
      ]
    },

    "critical_feedback": {
      "nameId": "critical_feedback",
      "visible": true,
      "type": "text_area",
      "label": "We noticed you had a really poor experience. Please help us understand what happened.",
      "required": true,
      "value": {
        "placeholder": "Please provide detailed feedback...",
        "min": 20,
        "max": 3000
      },
      "dependsOn": [
        [
          {
            "questionNameId": "event_rating",
            "optionNameId": "rating_terrible"
          },
          {
            "questionNameId": "would_attend_again",
            "optionNameId": "attend_no"
          }
        ],
        [
          {
            "questionNameId": "event_rating",
            "optionNameId": "rating_terrible"
          },
          {
            "questionNameId": "improvement_areas",
            "optionNameId": "improve_security_safety"
          }
        ],
        [
          {
            "questionNameId": "event_rating",
            "optionNameId": "rating_terrible"
          },
          {
            "questionNameId": "improvement_areas",
            "optionNameId": "improve_staff"
          }
        ]
      ]
    },

    "positive_feedback": {
      "nameId": "positive_feedback",
      "visible": true,
      "type": "text_area",
      "label": "What did you love most about the event?",
      "required": false,
      "value": {
        "placeholder": "Share what made your experience great...",
        "min": 5,
        "max": 1000
      },
      "dependsOn": [
        [
          {
            "questionNameId": "event_rating",
            "optionNameId": "rating_amazing"
          }
        ],
        [
          {
            "questionNameId": "event_rating",
            "optionNameId": "rating_good"
          },
          {
            "questionNameId": "would_attend_again",
            "optionNameId": "attend_yes"
          }
        ]
      ]
    },

    "contact_preference": {
      "nameId": "contact_preference",
      "visible": true,
      "type": "radio",
      "label": "Would you like to be contacted about future events?",
      "required": true,
      "value": {
        "options": [
          {
            "nameId": "contact_yes",
            "label": "Yes, keep me updated"
          },
          {
            "nameId": "contact_no",
            "label": "No, thanks"
          }
        ]
      }
    },

    "name": {
      "nameId": "name",
      "visible": true,
      "type": "input_text",
      "label": "Your full name",
      "required": true,
      "value": {
        "placeholder": "John Doe",
        "min": 2,
        "max": 100
      }
    },

    "email": {
      "nameId": "email",
      "visible": true,
      "type": "email",
      "label": "Your email address",
      "required": true,
      "value": {
        "placeholder": "you@example.com"
      }
    },

    "phone_number": {
      "nameId": "phone_number",
      "visible": true,
      "type": "telephone",
      "label": "Your phone number (optional)",
      "required": false,
      "value": {
        "placeholder": "+1 (555) 123-4567"
      }
    },

    "preferred_contact_method": {
      "nameId": "preferred_contact_method",
      "visible": true,
      "type": "radio",
      "label": "How would you prefer to be contacted?",
      "required": true,
      "value": {
        "options": [
          {
            "nameId": "method_email",
            "label": "Email"
          },
          {
            "nameId": "method_phone",
            "label": "Phone"
          },
          {
            "nameId": "method_both",
            "label": "Either is fine"
          }
        ]
      }
    },

    "event_photo": {
      "nameId": "event_photo",
      "visible": true,
      "type": "image",
      "label": "Share a photo from the event (optional)",
      "required": false,
      "value": {
        "altText": "Event photo",
        "tags": ["event", "photo", "user-submitted"],
        "maxSize": 5000000,
        "allowedContentTypes": ["image/jpeg", "image/png", "image/webp"]
      }
    },

    "birth_date": {
      "nameId": "birth_date",
      "visible": true,
      "type": "date_time",
      "label": "Your birth date (for age verification)",
      "required": true,
      "value": {
        "placeholder": "Select your birth date",
        "type": "date",
        "format": "2006-01-02"
      }
    }
  },

  "groups": {
    "grp-general": {
      "nameId": "grp-general",
      "title": "General Questions",
      "isExternalSurvey": false,
      "questionsIds": ["name", "email", "phone_number", "preferred_contact_method", "birth_date"],
      "dependsOn": [
        [
          {
            "questionNameId": "contact_preference",
            "optionNameId": "contact_yes"
          }
        ]
      ]
    },

    "grp_media": {
      "nameId": "grp_media",
      "title": "Share Your Memories",
      "description": "Upload photos from the event",
      "isExternalSurvey": false,
      "questionsIds": ["event_photo"],
      "dependsOn": [
        [
          {
            "questionNameId": "event_rating",
            "optionNameId": "rating_amazing"
          }
        ],
        [
          {
            "questionNameId": "event_rating",
            "optionNameId": "rating_good"
          }
        ],
        [
          {
            "questionNameId": "contact_preference",
            "optionNameId": "contact_yes"
          },
          {
            "questionNameId": "would_attend_again",
            "optionNameId": "attend_yes"
          }
        ]
      ]
    },

    "grp_closing": {
      "nameId": "grp_closing",
      "title": "Final Step",
      "description": "Almost done!",
      "isExternalSurvey": false,
      "questionsIds": ["contact_preference"]
    }
  },

  "groupsOrder": ["grp_event_experience", "grp_detailed_feedback", "grp_closing", "grp_contact_info", "grp_media"]
}
